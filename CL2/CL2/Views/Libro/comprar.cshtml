@model IEnumerable<CL2.Models.Item>

@{
    ViewBag.Title = "comprar";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<section class="panel-primary">
    <section class="panel-heading">
        Proceso de Compras de Libros
    </section>
    <section class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.costo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.subTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.foto)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.costo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.subTotal)
                    </td>
                    <td>
                        <img class="imgPro" src="@Url.Content(item.foto)"/>
                    </td>
                    <td>
                        @Html.ActionLink("Eliminar", "eliminarLibro", new {  id=item.codigo  }, new { @class = "btn btn-danger"})
                    </td>
                </tr>
            }

        </table>
    </section>
</section>
<section id="monto">
    <h1>TOTAL A PAGAR : S/@(((decimal)ViewBag.total).ToString("0.00")) </h1><br />
    @Html.ActionLink(">Retornar", "carritoCompras", "", new { @class = "btn btn-primary" })
    @Html.ActionLink("Pagar", "pagoLibro", "", new { @class = "btn btn-success" })
</section>